<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_reclamation_tree" model="ir.ui.view">
            <field name="name">reclamation.ticket.tree</field>
            <field name="model">reclamation.ticket</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_creation"/>
                    <field name="priorite"/>
                    <field name="etat"/>
                </tree>
            </field>
        </record>

        <record id="view_reclamation_form" model="ir.ui.view">
            <field name="name">reclamation.ticket.form</field>
            <field name="model">reclamation.ticket</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date_creation"/>
                            <field name="priorite"/>
                            <field name="description"/>
                            <field name="etat"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_reclamation" model="ir.actions.act_window">
            <field name="name">Réclamations</field>
            <field name="res_model">reclamation.ticket</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_reclamation_root" name="Réclamations" sequence="10"/>
        <menuitem id="menu_reclamation" name="Réclamations" parent="menu_reclamation_root" action="action_reclamation" sequence="10"/>
    </data>
</odoo>